# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database - PostgreSQL connection string
# For local development, install PostgreSQL and create a database
# For Railway, this is auto-provided when you add PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/moveify

# CORS - Frontend URL(s) allowed to access the API
# For local development, leave as * or use localhost
# For production, set to your Vercel URL
CORS_ORIGIN=http://localhost:5173

# Frontend URL - used for generating invitation links
FRONTEND_URL=http://localhost:5173
